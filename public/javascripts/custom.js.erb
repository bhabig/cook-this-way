/* Allows adding/removing of input field for ingredients */
var i = 2;

function add_fields() {
    var newparagraph = document.createElement('p');
    newparagraph.innerHTML = 'Name: <input type="text" name="ingredients' + i + '[name]" required> Amount: <input type="text" name="ingredient' + i + '[amount]" size="5" required> Measurement: <input type="text" name="ingredient' + i + '[measurement_type]" size="33" placeholder="e.g. cup, teaspoon, tablespoon, etc." required>';
    document.getElementById('new_ingredient').appendChild(newparagraph);
    i++
}

function remove_fields() {
  var paragraphs = document.getElementById("new_ingredient").getElementsByTagName("p");
  var lastParagraph = paragraphs[paragraphs.length-1];
  lastParagraph.parentNode.removeChild(lastParagraph);
}
