<header class="main-header">
  <div class="title">
    <h1 class="header-h1">Cook This Way</h1>
    <h4 class="header-h4">Recipes OUR way that you can make your own!</h4>
    <% if !@user %>
      <br>
      <a href="/signup"><button class="btn btn-default">Sign up to access more features</button></a>
    <% end %>
  </div>
</header>
<div class="container">
  <% if flash[:message] != nil %>
    <div class="alert"><%= flash.now[:message] %></div>
  <% end %>
  <%= erb(:'categories/_categories', :layout => false) %>

</div>
