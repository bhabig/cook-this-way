<div class="container">
  <div class="col-md-12">
    <h2 class="recipe-h3">
      <% if @category.name == "entrees" %>
        Entr√©es
      <% else %>
        <%= @category.name.titleize %>
      <% end %>
    </h2>
    <hr class="recipe-hr">
    <% @cat_page.each do |recipe| %>
      <div class="col-md-4 recipe-thumbs">
        <p><a href="/recipes/<%= recipe.id %>/<%= recipe.slug %>" class="recipe-links"><img src="<%= recipe.avatar.thumb.url %>" class="img-responsive center-block"></p>
        <p class="recipe-text"><%= recipe.name.titleize %></a></p>
      </div>
    <% end %>
    <br>
    <div class="col-md-12 text-center"><a href="/categories">View All Categories</a></div>
  </div>
</div>
