<div class="container">
  <h2><%= @category.name.titleize %></h2>
  <% @cat_page.each do |recipe| %>
    <li><a href="/recipes/<%= recipe.id %>/<%= recipe.slug %>"><%= recipe.name %></a></li>
  <% end %>
  <%= will_paginate @cat_page, renderer: BootstrapPagination::Sinatra %>
  <br>
  <p><a href="/categories">View All Categories</a></p>
</div>
